<div class="Recipe list">
  <h2>Listing all the recipes </h2>

    <tr class="header">
      <th>&nbsp;</th>
	  <th>Name</th>
	  <th>Region</th>
	  <th>Time_to_cook</th>
	  <th>Type</th>
	  <th>Ingredients needed</th>
    </tr>

    <br />
    <% @recipe_name.each do |r| %>
    <tr>
		<td><%= r.id %></td>
		<td><%= r.Name %></td>
		<td><%= r.Region %></td>
		<td class ="center"><%= r.Time_to_cook %></td>
		<td class ="center"><%= r.Type %></td>
		<td class ="center"><%= r.Ingredients_needed %></td>
		<td class="actions">
			<%= link_to("Show",{:action => 'show',:id => r.id},:class => 'action show') %>
			<%= link_to("Edit",{:action => 'edit',:id => r.id}, :class => 'action edit') %>
			<%= link_to("Delete",{:action => 'destroy',:id => r.id}, :method => :delete, data: {confirm: 'Are You sure?'}, :class => 'action delete') %>
		</td>	

     </tr><br /><br />
    
    <% end %>
</div>

<%= link_to("Insert new recipe","/recipes/new") %><br />

<%= link_to("Go back","/recipes") %>


